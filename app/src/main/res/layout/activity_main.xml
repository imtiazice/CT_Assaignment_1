<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:layout_margin="8dp"
    tools:context=".MainActivity">


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#ff6600"
            android:text="FLAT UI KIT"
            android:textColor="#FDFEFE"
            android:textSize="50dp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_margin="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="4"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="4"
                android:background="#ffa31a"
                android:layout_margin ="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09:30"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="35dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JAN 10,2014"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="24dp"/>

                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ssun"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25Â°"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NEW YORK"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="#66d9ff"
                    android:src="@mipmap/e"/>


                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:src="@mipmap/cloud_uploader"
                    android:background="#455A64"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginRight="4dp"
                android:text="WWW"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="35dp"
                android:drawableLeft="@mipmap/search"
                android:textStyle="normal"
                android:paddingLeft="28dp"
                android:background="#ff6600" />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/clock"
                android:background="#ffa31a"
                android:padding="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:drawableLeft="@mipmap/musicc"
            android:text="NOW PLAYING"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textAlignment="center"
            android:paddingLeft="20dp"
            android:background="#66d9ff"/>



</LinearLayout>